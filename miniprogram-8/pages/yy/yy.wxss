/* pages/yy/yy.wxss */
.box{
  width: 100%;
  height: 100%;
}
.tab {
  float: left;
  width: 33.3333%;
  text-align: center;
  /* padding: 10rpx 0; */
}
 
.topTabSwiper {
  /* border-top: 1px solid #ccc; */
  border-bottom: 1px solid #ccc;
  zoom: 1;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid black;
  color: black;
}
 
.swiper {
  width: 100%;
}
 
.swiper_con {
  width: 95%;
  padding-top: 20rpx;
  margin: 0 auto;
  border-bottom: 1px solid gainsboro;
}
.swiper_con .all{
  width:100%;
}
.swiper_con .all view image{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.swiper_con .all view {
  margin-top: 10rpx;
}
.swiper_con .all .tao{
  font-size: 25rpx;
  color: gray;
}
.swiper_con .all .three{
  color: gray;
  font-size: 26rpx;
  margin-bottom: 15rpx;
}
.swiper_con .all .three text{
  margin-right: 10rpx;
}
.swiper_con .all .three .price{
  display:inline-block ;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: white;
  margin-left: 150rpx;
  background-color: black;
  border-radius: 25rpx;
}