/* pages/index1/index1.wxss */
.box{
  width: 100%;
  height: 100%;
}
.all{
  width:90%;
  height: 100%;
  margin: 0 auto;
}
.all view image{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.all view {
  margin-top: 10rpx;
}
.all .tao{
  font-size: 25rpx;
  color: gray;
}
.all .three{
  color: gray;
  font-size: 26rpx;
  /* margin-bottom: 15rpx; */
}
.all .three text{
  margin-right: 10rpx;
}
.all .three .price{
  display:inline-block ;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: white;
  margin-left: 100rpx;
  background-color: black;
  border-radius: 25rpx;
}
.detail{
  width: 100%;
  height: 200rpx;
 
  border: 1px solid gray;
  margin-top: 20rpx;
}
.detail .fu{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid gainsboro;
  padding-left: 20rpx;
  margin: 0 auto;
}
.detail .fu text:first-child{
  display: inline-block;
  width: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: black;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.detail .love{
  padding-left: 20rpx;
  margin-right: 20rpx;
  color: gray;
  font-size:  28rpx; 
}
.phone{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  /* border: 1px solid black; */
  position: fixed;
  bottom: 0;
}
.phone image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.phone text{
  display: inline-block;
  width: 60%;
  height: 80rpx;
  background-color: black;
  text-align: center;
  line-height: 80rpx;
  color: white;
  margin-left: 80rpx;
  border-radius: 40rpx;
}
.big{
  width: 100%;
  height: 100%;
  background-color: black;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.9;
  z-index: 999;
  /* display: none; */
}
.big1{
  width: 100%;
  height: 100%;
  background-color: gainsboro;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.8;
  z-index: 2;
  display: none;
}
.hide{
  width: 100%;
  height: 180rpx;
  background-color: white;
  z-index: 999;
  position: fixed;
  bottom: 0;
  opacity: 1;
  /* display: none; */
}
.hide1{
  width: 100%;
  height: 180rpx;
  background-color: white;
  z-index: 999;
  position: absolute;
  bottom: 0rpx;
  opacity: 1;
  display: none;
}
.hide view{
  text-align: center;
  line-height: 80rpx;
}