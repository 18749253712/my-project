/* pages/my/my.wxss */
.box{
  width: 100%;
  height: 100%;
  background-color: whitesmoke;
}
.first{
  width: 100%;
  height: 350rpx;
  border: 1px solid black;
  background-color: black;
  color: white;
  text-align: center;
}
.first view {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  /* border: 1px solid pink; */
  margin-top: 20rpx;
  background-color: rgb(223, 223, 223);
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.first view image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
}
.list{
  width: 90%;
  height: 200rpx;
  /* border: 1px solid pink; */
  background-color: white;
  margin: 0 auto;
  margin-top: -70rpx;
}
.list .up{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 2%;
  border-bottom: 1px solid gainsboro;
  display: flex;
  justify-content: space-between;
}
.list .up text{
  padding-left:25rpx ;
}
.list .up text:nth-child(2){
  padding-right: 25rpx;
  color: gainsboro;
}
.list .down{
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.list .down .one{
  width: 25%;
  height: 110rpx;
}
.list .down .one image{
  width: 50rpx;
  height: 50rpx;
}
.yuan{
  width: 90%;
  height: 300rpx;
  /* border: 1px solid pink; */
  margin: 0 auto;
  background-color: white;
  margin-top: 20rpx;
}
.yuan view{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  border-bottom: 1px solid gainsboro;
  display: flex;
  justify-content: space-between;
}
.yuan1{
  width: 90%;
